{
  "description": "Auto-activate skills based on user prompt analysis",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx \"$HOME/.claude/plugins/marketplaces/shavakan/hooks/skill-activation/analyze-prompt.ts\" \"$USER_PROMPT\"",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
